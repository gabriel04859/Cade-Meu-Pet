<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewChoiceAnimalImage01"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonChoiceAnimalImage01"
        android:layout_margin="5dp"
        android:background="@drawable/ic_open_galery03"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/buttonChoiceAnimalImage01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewChoiceAnimalImage02"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.3"
            android:scaleType="fitXY"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewChoiceAnimalImage03"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:scaleType="fitXY"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.3"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewChoiceAnimalImage04"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginEnd="2dp"
            android:scaleType="fitXY"
            android:layout_weight="0.3"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/buttonChoiceAnimalImage01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonChoiceAnimalImage02"
            android:background="@drawable/ic_open_galery03"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_height="90dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonChoiceAnimalImage03"
            android:background="@drawable/ic_open_galery03"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonChoiceAnimalImage04"
            android:background="@drawable/ic_open_galery03"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.3"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>